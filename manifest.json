{
  
  "manifest_version": 3,
  "name": "Genealogy Tracer",
  "version": "1.0",
  "description": "Traces the genealogy of concepts.",
  "permissions": ["activeTab", "scripting", "notifications"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}