{
  "manifest_version": 3,
  "name": "Concept Tracer",
  "version": "0.4",
  "description": "Trace the genealogy of selected text using AI",
  "permissions": [
    "activeTab",
    "notifications",
    "windows",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "https://*.wikipedia.org/*",
    "https://red-heart-d66e.simon-kral99.workers.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Concept Tracer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "trace-selected": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Trace genealogy of selected text"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}